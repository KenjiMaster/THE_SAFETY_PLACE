<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F0E0"
    tools:context=".primeraapp.SolveActivity">

    <View
        android:id="@+id/veiws"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#0F222D"
        />
    <TextView
        android:id="@+id/tens"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="     Usuario"
        android:textSize="26dp"
        android:background="@drawable/redon5"
        />
    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tens"
        android:text="Aquí está tu proceso paso a paso"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/redon5"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="75dp"
        android:src="@drawable/logo"
        android:layout_marginTop="8dp"
        />
    <View
        android:id="@+id/veiws4"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@+id/veiws"
        android:background="#F5F0E0"
        />


        <View
            android:id="@+id/img1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#4553e1"
            android:background="@drawable/redon4"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@+id/veiws4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img2"

            />
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/baseline_emoji_objects_24"
            android:backgroundTint="#d2df30"
            app:layout_constraintTop_toTopOf="@+id/img1"
            app:layout_constraintStart_toStartOf="@id/img1"
            app:layout_constraintBottom_toBottomOf="@id/img1"
            app:layout_constraintEnd_toEndOf="@id/img1"


            />

        <View
            android:id="@+id/img2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#7245e1"
            android:background="@drawable/redon4"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@+id/veiws4"
            app:layout_constraintStart_toEndOf="@id/img1"
            app:layout_constraintEnd_toStartOf="@id/img3"

            />
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/baseline_bubble_chart_24"
            android:backgroundTint="#d2df30"
            app:layout_constraintTop_toTopOf="@+id/img2"
            app:layout_constraintStart_toStartOf="@id/img2"
            app:layout_constraintBottom_toBottomOf="@id/img2"
            app:layout_constraintEnd_toEndOf="@id/img2"
            />

        <View
            android:id="@+id/img3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#e33030"
            android:background="@drawable/redon4"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/img2"
            app:layout_constraintTop_toTopOf="@id/veiws4"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/baseline_audiotrack_24"
            android:backgroundTint="#d2df30"
            app:layout_constraintTop_toTopOf="@+id/img3"
            app:layout_constraintStart_toStartOf="@id/img3"
            app:layout_constraintBottom_toBottomOf="@id/img3"
            app:layout_constraintEnd_toEndOf="@id/img3"
            />


    <View
        android:id="@+id/bag"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/redon3"
        app:layout_constraintTop_toBottomOf="@+id/veiws4"
        app:layout_constraintBottom_toTopOf="@+id/veiws3"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />
    <View
        android:id="@+id/mas1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:backgroundTint="#0F222D"
        android:background="@drawable/redon4"
        app:layout_constraintTop_toTopOf="@id/bag"
        app:layout_constraintStart_toStartOf="@id/bag"
        app:layout_constraintBottom_toTopOf="@id/mas2"
        />
    <ImageView
        android:id="@+id/lag1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/baseline_emoji_objects_24"
        android:backgroundTint="#d2df30"
        app:layout_constraintTop_toTopOf="@+id/mas1"
        app:layout_constraintStart_toStartOf="@id/mas1"
        app:layout_constraintBottom_toBottomOf="@id/mas1"
        />
    <TextView
        android:id="@+id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ILUMINACIÓN"
        android:textSize="25dp"
        android:textColor="#F5F0E0"
        app:layout_constraintStart_toEndOf="@+id/lag1"
        app:layout_constraintTop_toTopOf="@id/mas1"
        app:layout_constraintBottom_toBottomOf="@id/mas1"

        />



    <View
        android:id="@+id/mas2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:backgroundTint="#0F222D"
        android:background="@drawable/redon4"
        app:layout_constraintTop_toBottomOf="@id/mas1"
        app:layout_constraintStart_toStartOf="@id/bag"
        app:layout_constraintBottom_toTopOf="@id/mas3"
        />
    <ImageView
        android:id="@+id/lag2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/bubujas"
        android:backgroundTint="#d2df30"
        app:layout_constraintTop_toTopOf="@+id/mas2"
        app:layout_constraintStart_toStartOf="@id/mas2"
        app:layout_constraintBottom_toBottomOf="@id/mas2"
        />
    <TextView
        android:id="@+id/texto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AROMAS"
        android:textSize="25dp"
        android:textColor="#F5F0E0"
        app:layout_constraintStart_toEndOf="@id/lag2"
        app:layout_constraintTop_toTopOf="@id/mas2"
        app:layout_constraintBottom_toBottomOf="@id/mas2"

        />



    <View
        android:id="@+id/mas3"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:backgroundTint="#0F222D"
        android:background="@drawable/redon4"
        app:layout_constraintTop_toBottomOf="@id/mas2"
        app:layout_constraintStart_toStartOf="@id/bag"
        app:layout_constraintBottom_toBottomOf="@id/bag"
        />
    <ImageView
        android:id="@+id/lag3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/audio"
        android:backgroundTint="#d2df30"
        app:layout_constraintTop_toTopOf="@+id/mas3"
        app:layout_constraintStart_toStartOf="@id/mas3"
        app:layout_constraintBottom_toBottomOf="@id/mas3"
        />
    <TextView
        android:id="@+id/texto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SONIDOS"
        android:textSize="25dp"
        android:textColor="#F5F0E0"
        app:layout_constraintStart_toEndOf="@id/lag3"
        app:layout_constraintTop_toTopOf="@id/mas3"
        app:layout_constraintBottom_toBottomOf="@id/mas3"

        />










    <View
        android:id="@+id/veiws3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#F5F0E0"
        />




        <ImageView
            android:id="@+id/imgs1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/casa"

            android:backgroundTint="#d2df30"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="@+id/veiws3"
            app:layout_constraintStart_toStartOf="parent"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/imgs1"
            app:layout_constraintStart_toStartOf="@id/imgs1"
            app:layout_constraintEnd_toEndOf="@id/imgs1"
            />

        <ImageView
            android:id="@+id/imgs2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/tuerca"
            android:backgroundTint="#d2df30"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@+id/veiws3"
            app:layout_constraintStart_toEndOf="@id/imgs1"
            app:layout_constraintEnd_toStartOf="@id/imgs3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/imgs2"
            app:layout_constraintStart_toStartOf="@id/imgs2"
            app:layout_constraintEnd_toEndOf="@id/imgs2"
            />

        <ImageView
            android:id="@+id/imgs3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/admiracion"
            android:backgroundTint="#d2df30"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@id/veiws3"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Más"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/imgs3"
            app:layout_constraintStart_toStartOf="@id/imgs3"
            app:layout_constraintEnd_toEndOf="@id/imgs3"
            />

</androidx.constraintlayout.widget.ConstraintLayout>