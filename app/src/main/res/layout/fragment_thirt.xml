<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color_uno"
    tools:context=".primeraapp.ThirtFragment">

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:background="@drawable/logo"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:text="THE SAFETY PLACE"
        android:textSize="38dp"
        android:textStyle="bold"
        android:textColor="#DAD8CB"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="224dp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uno"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:text="¿Cómo Te Sientes?"
        android:background="@drawable/redondeado"
        android:layout_marginTop="75dp"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dos"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:text="No Sé cómo me siento"
        android:background="@drawable/redondeado"
        app:layout_constraintTop_toBottomOf="@id/uno"
        android:layout_marginTop="12dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tres"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:text="ir al menú principal"
        android:layout_marginTop="12dp"
        android:textSize="16dp"
        android:background="@drawable/redondeado"
        app:layout_constraintTop_toBottomOf="@id/dos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <View
        android:id="@+id/car"
        android:layout_width="13sp"
        android:layout_height="13sp"
        android:background="@drawable/redox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="35dp"

        />
    <View
        android:layout_width="13sp"
        android:layout_height="13sp"
        android:background="@drawable/redox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/car"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="43dp"

        />
    <View
        android:layout_width="23sp"
        android:layout_height="23sp"
        android:background="@drawable/redox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/car"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="43dp"

        />



</androidx.constraintlayout.widget.ConstraintLayout>