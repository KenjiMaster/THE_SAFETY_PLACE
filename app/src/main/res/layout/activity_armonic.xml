<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F0E0"
    tools:context=".primeraapp.ArmonicActivity">

    <View
        android:id="@+id/veiws"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#0F222D"
        />
    <Button
        android:id="@+id/botsalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#F5F0E0"
        android:textColor="#0F222D"
        android:text=" ⪡ Aromas"
        android:textSize="25dp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="-20dp"
        />
    <LinearLayout
        android:id="@+id/laca"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/botsalir"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/redondeado"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">


        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:checked="false"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desactivar / Activar"
            android:textSize="16dp"
            android:textColor="#0F222D"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/bubujas"
        app:layout_constraintBottom_toBottomOf="@+id/veiws"
        app:layout_constraintEnd_toEndOf="@+id/veiws"
        app:layout_constraintStart_toEndOf="@+id/laca"
        app:layout_constraintTop_toTopOf="@id/veiws"
        />

    <LinearLayout
        android:id="@+id/lavanda"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/redon5"
        android:backgroundTint="#9F77B5"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/menta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/bubujas"
            android:backgroundTint="#d2df30"
            android:layout_gravity="center"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="LAVANDA&#10; Se dicipará el olor&#10; al interior del domo "
            />
        <Switch
            android:id="@+id/switch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="45dp"
            android:layout_gravity="center"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/menta"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/redon5"
        android:backgroundTint="#B1D684"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/veiws"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lavanda"
        >

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_grass_48"
            android:backgroundTint="#d2df30"
            android:layout_gravity="center"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="MENTA&#10; Se dicipará el olor&#10; al interior del domo "
            />
        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="45dp"
            android:layout_gravity="center"

            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>