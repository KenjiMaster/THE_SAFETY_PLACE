<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color_emot"
    tools:context=".primeraapp.EncuestActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/emotions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnChangeActivity"
        />

    <Button
        android:id="@+id/btnChangeActivity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:backgroundTint="@color/verde"
        android:tint="@color/purple_700"
        app:fabSize="normal"
        android:contentDescription="Abrir Ajustes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:src="@drawable/baseline_play_arrow_48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btnChangeActivity"
        app:layout_constraintStart_toStartOf="@id/btnChangeActivity"
        app:layout_constraintEnd_toEndOf="@id/btnChangeActivity"
        app:layout_constraintBottom_toBottomOf="@id/btnChangeActivity"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


